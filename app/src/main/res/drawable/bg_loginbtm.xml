<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <gradient android:angle="0" android:endColor="@color/common_primary_color" android:startColor="@color/common_primary_color" />
            <corners android:radius="@dimen/dp_20" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="0" android:endColor="@color/common_primary_dark_color" android:startColor="@color/common_primary_dark_color" />
            <corners android:radius="@dimen/dp_20" />
        </shape>
    </item>
</selector>