<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--关卡成功结束关卡状态标题字体样式-->
    <style name="ShowSuccessMessage">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#f4b56b</item>
    </style>

    <!--关卡失败结束关卡状态标题字体样式-->
    <style name="ShowFailureMessage">
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">#f4b56b</item>
    </style>

    <!--关卡成功结束关卡信息字体样式-->
    <style name="LevelMessage">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#3082b0</item>
    </style>

    <!--关卡成功结束状态信息的标题字体样式-->
    <style name="StateTitleMessage">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">#3e92a2</item>
        <item name="android:layout_marginEnd">40dp</item>
    </style>

    <!--关卡成功结束状态信息的内容字体样式-->
    <style name="StateContentMessage">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#00ff00</item>
    </style>

    <!--操作按钮（菜单，刷新，下一关）的样式-->
    <style name="operation_btn">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:padding">10dp</item>
    </style>

    <!--主页三个模式按钮的样式-->
    <style name="mode_btn">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/btn_shape_main_bg</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:drawablePadding">30dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!--主页设置，帮助，商店按钮的样式-->
    <style name="main_bg">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
    </style>

</resources>
